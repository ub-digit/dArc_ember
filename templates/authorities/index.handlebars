<div class="container-fluid">
	<div class="page-head">
		<div class="row v-align">
			<div class="col-xs-12">
				<h1>
					{{translateString STRINGS.PAGES.AUTHORITIES.TITLE}}
					{{#if isEditing}}
						<small>({{translateString STRINGS.STATUSSTRINGS.EDITING}})</small>
					{{/if}}
				</h1>
			</div>
		</div> <!-- end row --> 
	</div> <!-- end page-head --> 

	<div class="row">

		<div id="result-list" class="col-xs-10">
			<div class="row">
				<div class="col-xs-12">
					<ul>
						{{#each item in model}}
							<li>
							{{#if isEditing }}
								{{input type="checkbox" name="markedForRemoval" checked=false}}
							{{/if}}
							{{#link-to 'authorities.show' item.id}}{{item.title}} ({{item.id}}) {{/link-to}}

							</li>
						{{/each}}
					</ul>
				</div>
			</div> <!-- end row -->
		</div> 
	</div> 
	<div class="row">
		<div class="col-xs-1">
			<button {{action 'createAuthority'}} {{bind-attr class=":btn :btn-sm :btn-primary :btn-block"}}>{{translateString STRINGS.BUTTON.CREATE_AUTHORITY}}</button>
			<!--
			<button {{bind-attr class=":btn :btn-sm :btn-default :btn-block isEditing::disabled"}} {{action 'toggleIsEditing'}}>{{translateString STRINGS.BUTTON.CLOSE}}</button>
			<button {{bind-attr class=":btn :btn-sm :btn-default :btn-block isEditing:disabled"}} {{action 'toggleIsEditing'}}>{{translateString STRINGS.BUTTON.EDIT}}</button>
			<button {{bind-attr class=":btn :btn-sm :btn-danger :btn-block isEditing::disabled"}}>{{translateString STRINGS.BUTTON.REMOVE}}</button>
			-->
		</div>
	</div>
</div>